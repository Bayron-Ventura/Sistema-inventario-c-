<Window x:Class="InventarioDesktop.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sistema de Inventario" Height="600" Width="800"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        MinHeight="500" MinWidth="700">
    
    <Grid>
        
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                <GradientStop Color="#FAF8F5" Offset="0"/>
                <GradientStop Color="#F5F0EB" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <Grid Margin="40,20,40,20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                
                <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,20,0,10">
                    <TextBlock Text="📦" 
                               FontSize="48" 
                               HorizontalAlignment="Center"
                               Margin="0,0,0,10"/>
                    <TextBlock Text="Sistema de Inventario" 
                               FontSize="32" 
                               FontWeight="Light" 
                               Foreground="{StaticResource PrimaryBrush}" 
                               HorizontalAlignment="Center"
                               TextWrapping="Wrap"
                               TextAlignment="Center"/>
                    <Rectangle Height="3" 
                               Width="200" 
                               Margin="0,10,0,0"
                               HorizontalAlignment="Center">
                        <Rectangle.Fill>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                <GradientStop Color="Transparent" Offset="0"/>
                                <GradientStop Color="#D4A574" Offset="0.5"/>
                                <GradientStop Color="Transparent" Offset="1"/>
                            </LinearGradientBrush>
                        </Rectangle.Fill>
                    </Rectangle>
                </StackPanel>
                
                <TextBlock Grid.Row="1" 
                           Text="Seleccione un módulo para comenzar" 
                           FontSize="15" 
                           Foreground="#FF888888"
                           HorizontalAlignment="Center"
                           Margin="0,10,0,40"
                           TextWrapping="Wrap"
                           TextAlignment="Center"/>

                
                <StackPanel Grid.Row="2" MaxWidth="700" HorizontalAlignment="Center">
                    
                    <Border Style="{StaticResource CardStyle}" Margin="0,0,0,20" MinHeight="180">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <Ellipse Grid.Row="0" 
                                     Width="60" Height="60" 
                                     HorizontalAlignment="Left"
                                     Margin="0,0,0,15">
                                <Ellipse.Fill>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                        <GradientStop Color="#D4A574" Offset="0"/>
                                        <GradientStop Color="#B8935E" Offset="1"/>
                                    </LinearGradientBrush>
                                </Ellipse.Fill>
                            </Ellipse>
                            <TextBlock Grid.Row="0" 
                                       Text="📁" 
                                       FontSize="28" 
                                       HorizontalAlignment="Left"
                                       VerticalAlignment="Center"
                                       Margin="16,0,0,0"/>
                            

                            <TextBlock Grid.Row="1" 
                                       Text="Gestión de Categorías" 
                                       FontSize="22" 
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource OnSurfaceBrush}"/>
                            

                            <TextBlock Grid.Row="2" 
                                       Text="Administrar las categorías de productos del inventario. Crear, editar y eliminar categorías para organizar mejor tus productos."
                                       FontSize="14" 
                                       Foreground="#FF666666"
                                       TextWrapping="Wrap"
                                       Margin="0,10,0,15"/>
                            

                            <Button Grid.Row="3" 
                                    Content="Abrir Categorías →" 
                                    Command="{Binding OpenCategoriasCommand}"
                                    HorizontalAlignment="Right"
                                    Padding="25,12"/>
                        </Grid>
                    </Border>

                    <Border Style="{StaticResource CardStyle}" MinHeight="180">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <Ellipse Grid.Row="0" 
                                     Width="60" Height="60" 
                                     HorizontalAlignment="Left"
                                     Margin="0,0,0,15">
                                <Ellipse.Fill>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                        <GradientStop Color="#8B6F47" Offset="0"/>
                                        <GradientStop Color="#6B5435" Offset="1"/>
                                    </LinearGradientBrush>
                                </Ellipse.Fill>
                            </Ellipse>
                            <TextBlock Grid.Row="0" 
                                       Text="📦" 
                                       FontSize="28" 
                                       HorizontalAlignment="Left"
                                       VerticalAlignment="Center"
                                       Margin="16,0,0,0"/>
                            
                            <TextBlock Grid.Row="1" 
                                       Text="Gestión de Productos" 
                                       FontSize="22" 
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource OnSurfaceBrush}"/>
                            
                            
                            <TextBlock Grid.Row="2" 
                                       Text="Administrar el inventario completo de productos. Agregar nuevos productos, actualizar stock, precios y visualizar toda la información."
                                       FontSize="14" 
                                       Foreground="#FF666666"
                                       TextWrapping="Wrap"
                                       Margin="0,10,0,15"/>
                            
                            <Button Grid.Row="3" 
                                    Content="Abrir Productos →" 
                                    Command="{Binding OpenProductosCommand}"
                                    HorizontalAlignment="Right"
                                    Padding="25,12"/>
                        </Grid>
                    </Border>
                </StackPanel>

                <Border Grid.Row="3" 
                        Background="Transparent"
                        Margin="0,30,0,0">
                    <StackPanel Orientation="Horizontal" 
                                HorizontalAlignment="Right">
                        <Button Content="⛶ Pantalla Completa" 
                                Command="{Binding ToggleFullScreenCommand}"
                                Style="{StaticResource SecondaryButtonStyle}"
                                Padding="20,10"/>
                    </StackPanel>
                </Border>
            </Grid>
        </ScrollViewer>
    </Grid>
</Window>